.swiper_index{
  width:750rpx ;
  height: 340rpx;
}
.swiper_index img{
  width: 100%;
}

.nav_index{
  display: flex;
  margin: 20rpx 0;
}
.nav_index navigator {
  flex: 1;
}
.nav_index navigator image{
  width: 80%;
}

/* 楼层样式 */


.floor-title{
  padding: 10rpx 0;
}
.floor-content{
  overflow: hidden;
}
.floor-content navigator{
  width: 33.33%;
  float: left;
}

.floor-content navigator:nth-last-child(-n+4){
  height: 27.72711207vw;
  border-left: 10rpx solid #fff;
  box-sizing: border-box;

}
.floor-content navigator:nth-child(2),
.floor-content navigator:nth-child(3){
  border-bottom: solid 10rpx #fff;
  box-sizing: border-box;
}

.floor-content navigator image {
  width: 100%;
  height: 100%;

}